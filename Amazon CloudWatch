Service: Amazon CloudWatch est un service de surveillance pour les ressources AWS et les applications que vous ex√©cutez sur AWS.

provider "aws" {
  region = var.region
}

resource "aws_cloudwatch_log_group" "cloudW" {
  name              = "example-log-group"
  retention_in_days = 14

  tags = {
    Name = "ExampleLogGroup"
  }
}

resource "aws_cloudwatch_log_stream" "cloudW" {
  name           = "example-log-stream"
  log_group_name = aws_cloudwatch_log_group.cloudW.name
}



terraform init
terraform plan
terraform apply
